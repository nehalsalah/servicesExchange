<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="5dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cardLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:id="@+id/clientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="10sp"
            android:text="John Doe"
            android:textColor="#de000000"
            android:textSize="14sp"
            android:textStyle="normal"
            card_view:layout_constraintStart_toEndOf="@+id/iconName"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="4sp"
            android:text="Service :"
            android:textColor="#8a000000"
            android:textSize="13sp"
            android:textStyle="normal"
            card_view:layout_constraintHorizontal_chainStyle="packed"
            card_view:layout_constraintStart_toEndOf="@+id/iconName"
            card_view:layout_constraintTop_toBottomOf="@+id/clientName" />

        <TextView
            android:id="@+id/serviceDesc"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="4sp"
            android:text="Do 2 modern and eye catching logo design"
            android:textColor="#fbca03"
            android:textSize="13sp"
            android:textStyle="normal"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/textView31"
            card_view:layout_constraintTop_toTopOf="@+id/textView31" />

        <TextView
            android:id="@+id/iconName"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/darkcircle"
            android:gravity="center_vertical|center_horizontal"
            android:text="J"
            android:textColor="@color/cardview_light_background"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="May 2, 2018"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintStart_toEndOf="@+id/clientName"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView47"
            android:layout_width="54dp"
            android:layout_height="19dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.01"
            android:text="Budget :"
            android:textColor="#8a000000"
            android:textSize="13sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/iconName"
            card_view:layout_constraintTop_toBottomOf="@+id/serviceDesc"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="4sp"
            android:text=" 25 points"
            android:textColor="#fbca03"
            android:textSize="13sp"
            android:textStyle="normal"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/serviceDesc"
            card_view:layout_constraintTop_toTopOf="@+id/textView47" />

        <Button
            android:id="@+id/accept"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="#fbca03"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.01"
            android:text="Accept Offer"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:textStyle="normal"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/points" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.01"
            android:text="Decline"
            android:textColor="#444444"
            android:textSize="10sp"
            android:textStyle="normal"
            card_view:layout_constraintBottom_toBottomOf="@+id/accept"
            card_view:layout_constraintEnd_toStartOf="@+id/accept"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/accept" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>